---
import BaseHead from '../components/BaseHead.astro';
import Header from '../components/Header.astro';
import StarryBackground from '../components/StarryBackground.astro';
import Footer from '../components/Footer.astro';
import { SITE_TITLE, SITE_DESCRIPTION } from '../consts';
import '../styles/stars.css';
---

<!doctype html>
<html lang="en">
	<head>
		<BaseHead title={SITE_TITLE} description={SITE_DESCRIPTION} />
		<style>
			.hero {
				padding: 8rem 2rem;
				display: flex;
				flex-direction: column;
				align-items: center;
				text-align: center;
			}
			.hero h1 {
				font-size: 4rem;
				font-weight: 700;
				line-height: 1;
				margin-bottom: 1rem;
				color: rgb(var(--black));
			}
			.hero p {
				font-size: 1.25rem;
				max-width: 60ch;
			}
		</style>
	</head>
	<body>
		<StarryBackground />
		<Header />
		<main>
			<section class="hero">
				<h1>Moonwake</h1>
				<p>{SITE_DESCRIPTION} Explore my thoughts, guides, and projects.</p>
			</section>
		</main>
		<Footer />
	</body>
</html>
